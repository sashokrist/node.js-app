<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Real Estate</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/news">News</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/properties">Properties</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/renovations">Renovations</a></li>
        <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <h2>Latest News</h2>

<div class="container px-0">
  <% for (let i = 0; i < news.length; i += 3) { %>
    <div class="row">
      <% news.slice(i, i + 3).forEach(item => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if (item.image) { %>
              <img src="<%= item.image %>" 
                   alt="<%= item.title %>" 
                   class="card-img-top" 
                   style="height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <p class="card-text"><%= item.content.substring(0, 100) %>...</p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
<h2>Latest Properties</h2>
<div class="row">
  <% properties.forEach(item => { %>
    <div class="col-md-4 mb-3">
      <a href="/property/<%= item.id %>" class="text-decoration-none text-dark">
        <div class="card h-100">
          <% const firstImage = item.image_url?.split(',')[0]; %>
          <% if (firstImage) { %>
            <img src="<%= firstImage %>" 
                 alt="<%= item.title %>" 
                 class="card-img-top" 
                 style="height: 200px; object-fit: cover;">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description.substring(0, 100) %>...</p>
          </div>
        </div>
      </a>
    </div>
  <% }) %>
<h2>Latest Renovations</h2>
<div class="row">
  <% renovations.forEach(item => { %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <% if (item.image_url) { %>
          <img src="<%= item.image_url %>" 
               alt="<%= item.service_name %>" 
               class="card-img-top"
               style="height: 200px; object-fit: cover;">
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= item.service_name %></h5>
          <p class="card-text"><%= item.description.substring(0, 100) %>...</p>
        </div>
      </div>
    </div>
  <% }) %>
</div>
</body>
</html>
<head>
  <title>Home</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Real Estate</a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="/news">News</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/properties">Properties</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/renovations">Renovations</a></li>
        <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <h2>Renovations</h2>
  <a href="/admin/renovations/create" class="btn btn-primary mb-3">Create Renovation Service</a>

  <h4>Renovations</h4>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Service Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% renovations.forEach(item => { %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.service_name %></td>
          <td><%= item.description %></td>
          <td>
            <% if (item.image_url) { %>
              <img src="<%= item.image_url %>" width="100">
            <% } else { %>
              No Image
            <% } %>
          </td>
          <td><%= item.created_at.toLocaleString() %></td>
          <td>
            <a href="/admin/renovations/edit/<%= item.id %>" class="btn btn-sm btn-warning">Edit</a>
            <form method="POST" action="/admin/renovations/delete/<%= item.id %>" class="d-inline" onsubmit="return confirm('Are you sure?')">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h4 class="mt-5">Renovating Services</h4>
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Service Type</th>
        <th>Image Name</th>
        <th>Image</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% renovatingServices.forEach(item => { %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.title %></td>
          <td><%= item.description %></td>
          <td><%= item.service_type %></td>
          <td><%= item.image_name %></td>
          <td>
            <% if (item.image_url) { %>
              <img src="<%= item.image_url %>" width="100">
            <% } else { %>
              No Image
            <% } %>
          </td>
          <td><%= item.created_at.toLocaleString() %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>
<div class="container">
 <h2>Edit News</h2>
<form method="POST" action="/admin/news/edit/<%= news.id %>">
  <div class="mb-3">
    <label>Title</label>
    <input name="title" class="form-control" value="<%= news.title %>" required>
  </div>
  <div class="mb-3">
    <label>Content</label>
    <textarea name="content" class="form-control" rows="5" required><%= news.content %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form
</div>
</body>
